<h3>All current projects</h3>

<div class="form-group">
  <form action="/projects/search" method="post">
    <div class="form-group">
      <label for="search">Search</label>
      <input id="search" name="search" class="form-control" type="text">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>

<h3>Projects</h3>

<% if @projects.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
  </ul>

<% else %>
  <p>There are no projects to display.</p>
<% end %>

<h3>Add a new project</h3>

<div class="form-group">
  <form action="/projects" method="post">
    <div class="form-group">
      <label for="project_name">Project title</label>
      <input name="title" class="form-control" type="text">
    </div>
    <button class="btn btn-primary" type="submit" class="btn">Create Project</button>
  </form>
</div>

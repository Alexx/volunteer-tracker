<div class="card">
  <div class="card-header">
    <h3>All current projects</h3>
  </div>
  <div class="card-body">
    <% if @projects.any? %>
    <ul>
      <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
      <% end %>
    </ul>

    <% else %>
    <p>There are no projects to display.</p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>Add a new project</h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <form action="/projects" method="post">
        <div class="form-group">
          <label for="project_name">Project title</label>
          <input name="title" class="form-control" type="text">
        </div>
        <button class="btn btn-primary" type="submit" class="btn">Create Project</button>
      </form>
    </div>
  </div>
</div>

<h2 class="text-center"><%= @project.title %></h2>

<div class="card">
  <div class="card-header">
    <h3>Project Volunteers</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <% if @project.volunteers %>
      <% @project.volunteers.each do |volunteer| %>
      <div class="col-md-3">
        <div class="card">
          <a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><img class="card-img-top" src="/img/default.png" alt="Picture of <%= volunteer.name %>"></a>
          <div class="card-body">
            <div class="card-title">
              <h3 class="text-center"><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></h3>
            </div>
            <hr>
          </div>
          <div class="card-body">
            <form class="" action="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>">
              <button class="btn btn-primary text-center" type="submit" name="button">Edit</button>

            </form>
          </div>
        </div>
      </div>
      <% end %>
      <% else %>
      <p>There are no volunteers listed for this project yet.</p>
    </div>
  </div>
</div>
<% end %>

<div class="card">
  <div class="card-header">
    <h4>Add a volunteer:</h4>
  </div>
  <div class="card-body">
    <div class="form-group">
      <form action="/projects/<%= @project.id %>/volunteers" method="post">
        <div class="form-group">
          <label for="volunteer_name">Volunteer Name:</label>
          <input id="volunteer_name" name="volunteer_name" class="form-control" type="text">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </div>
</div>




<p><a href="/projects/<%= @project.id %>/edit">Edit Project</a></p>
<p><a href="/projects">Return to project list</a></p>

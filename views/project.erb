<h2 class="text-center"><%= @project.title %></h2>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3>Add a Volunteer</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <% if @volunteers.any? %>
          <form action="/projects/<%= @project.id %>/volunteers" method="post">
            <div class="form-group">
              <label for="volunteer">Select a volunteer</label>
              <select class="form-control" name="volunteer">
                <% @volunteers.each do |volunteer| %>
                <option value="<%= volunteer.id %>"><%= volunteer.name %></option>
                <% end %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Assign</button>
          </form>
          <% else %>
          <p>No volunteers available.</p>
          <% end %>
        </div>
        <p><a href="/projects/<%= @project.id %>/edit">Edit Project</a></p>
        <p><a href="/projects">Return to project list</a></p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3>Project Volunteers</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <% @project.volunteers.each do |volunteer| %>
          <div class="col-md-3">
            <div class="card">
              <a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><img class="card-img-top" src="/img/default.png" alt="Picture of <%= volunteer.name %>"></a>
              <div class="card-body">
                <div class="card-title">
                  <h3 class="text-center"><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></h3>
                </div>
                <hr>
              </div>
              <div class="card-body">
                <form class="" action="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>/remove" method="post">
                  <button class="btn btn-primary profile-btn" type="submit" name="button">Remove</button>
                </form>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

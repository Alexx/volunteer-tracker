<h2 class="text-center"><%= @project.title %></h2>
<div class="card">
  <div class="card-header">
    <h3>Project Volunteers</h3>
  </div>
  <div class="card-body">
    <% if @project.volunteers %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
      <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no volunteers listed for this project yet.</p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4>Add a volunteer:</h4>
  </div>
  <div class="card-body">
    <div class="form-group">
      <form action="/projects/<%= @project.id %>/volunteers" method="post">
        <div class="form-group">
          <label for="volunteer_name">Volunteer Name:</label>
          <input id="volunteer_name" name="volunteer_name" class="form-control" type="text">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </div>
</div>




<p><a href="/projects/<%= @project.id %>/edit">Edit Project</a></p>
<p><a href="/projects">Return to project list</a></p>

<div class="card">
  <div class="card-header">
    <h2>Volunteer: <%= @volunteer.name %></h2>
  </div>
  <div class="card-body">
    <h3>Project: None</h3>
    <div class="form-group">
      <form action="/volunteers/<%= @volunteer.id %>" method="post">
        <input name="_method" type="hidden" value="patch">

        <label for="name">Rename volunteer</label>
        <input class="form-control" id="name" name="name" type="text">

        <button class="btn btn-primary" type="submit">Update Volunteer</button>
      </form>
    </div>

    <div class="form-group">
      <form action="/volunteers/<%= @volunteer.id %>" method="post">
        <input name="_method" type="hidden" value="delete">

        <button class="btn btn-primary" type="submit">Delete Volunteer</button>
      </form>
    </div>

    <a href="/projects">Return to project list</a>
  </div>
</div>
